+
+	ls1_sap_set_addr_high(target->tap, 0);
+
+	while (count--) {
+		ls1_sap_memory_cmd(target->tap, address, size, false);
+		ls1_sap_memory_write(target->tap, size, buffer);
+		address += size;
+		buffer += size;
+	}
+
+	return jtag_execute_queue();
